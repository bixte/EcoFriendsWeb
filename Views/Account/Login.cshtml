@model EcoFriendsWeb.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@section CssStyle{
<link rel="stylesheet" asp-href-include="~/css/account/*.css" asp-append-version="true" />
}
<div class="autozation">
    <h1 class="text-center">Авторизация</h1>
    <form class="autozation" method="post" asp-controller="Account" asp-action="Login" style="margin-top:100px" asp-route-returnUrl="@Model.ReturnUrl">
        <div class="row justify-content-center">
            <div class="col-10 col-sm-8 offset-lg-3 text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="col-8 col-lg-5 order-1">
                <div class="form-group">
                    <span asp-validation-for=NickName></span>
                    <label class="mb-2" asp-for="NickName">
                    </label>
                    <input class="form-control input-primary-eco" asp-for="NickName" placeholder="Например:дубовый клен33" />
                </div>
                <div class="form-group">
                    <span asp-validation-for=Password></span>
                    <label class="mb-2" asp-for="Password">
                    </label>
                    <input class="form-control input-primary-eco" asp-for="Password" />
                    <a href="#">Я забыл пароль</a>
                </div>
                <div class="d-flex align-items-center justify-content-start">
                    <input type="checkbox" asp-for="RememberMe" class="form-check" />
                    <label asp-for="RememberMe" class="form-check-label ml-2">Запомнить меня</label>
                </div>
                <div class="d-sm-flex justify-content-between d-block mt-4 autozation-form_item">
                    <button type="submit" class="btn btn-primary-eco_sm">Войти</button>
                    <a id="registration" asp-action="Registration" class="btn  btn-primary-eco_sm autozation-form_item-linkToRegistration mt-sm-0 mt-2">Зарегистрироваться</a>
                </div>
            </div>
        </div>
    </form>
</div>