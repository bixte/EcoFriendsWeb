@model EcoFriendsWeb.DataModels.EventPost
@{

}
<form method="post" asp-action="CreateEvent" enctype="multipart/form-data">
    <div class="event">
        <div class="event__top">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row event__top-pictures">
                <div id="carouselExampleIndicators" class="carousel slide  col-sm-12" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner event__carousel-inner">
                        <div class="carousel-item">
                            <img class="w-100" src="/img/placeholder1100x510.png" />
                        </div>
                        <div class="carousel-item">
                            <img class="w-100" src="/img/placeholder1100x510.png" />
                        </div>
                        <div class="carousel-item">
                            <img class="w-100" src="/img/placeholder1100x510.png" />
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="event__top-pictures-download col-12">
                    <input class="event__top-download-link" type="file" name="mainSlider" multiple />
                </div>
                <div class="col-lg-12 mt-sm-3 mt-2 mt-xl-0 row event__top-description">
                    <div class="form-group d-flex flex-column col-sm-6 p-0">
                        <label class="event__top-description-title" asp-for="Title">Заголовок</label>
                        <input class="form-control" asp-for="Title" />
                    </div>
                    <div class="w-100"></div>
                    <div class="form-group d-flex flex-column col-sm-6 p-0">
                        <label class="event__top-description-shortDescription" asp-for="ShortDescription">Короткое орписание:</label>
                        <input class="form-control" asp-for="ShortDescription" />
                    </div>
                    <div class="form-group d-flex flex-column w-100">
                        <label class="event__top-description-description" asp-for="Desctiption">Полное описание</label>
                        <textarea class="form-control event__top-description-text" asp-for="Desctiption"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="event__body mt-3">
            <div>
                <span class="event-body-title">Дополнительная информация</span>
            </div>
            <div class="event__body-text mt-2">
                <div class="form-group">
                    <label asp-for="Text"></label>
                    <textarea class="form-control" asp-for="Text"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="Text2"></label>
                    <textarea class="form-control" asp-for="Text2"></textarea>
                </div>
            </div>
            <div class="event-body__contact d-flex justify-content-between flex-wrap">
                <div>
                    <span class="event-body__contact-title">Контакты:</span>
                    <div class="d-flex mt-2 event-body__contact-telephone">
                        <span>
                            <img class="event-body__contact-telephone-icon" src="~/img/telephone.png" width="32">
                        </span>
                        <div class="ml-2 ">
                            <label asp-for="ContactPhone"></label>
                            <input class="form-control" asp-for="ContactPhone" type="tel" />
                        </div>
                    </div>
                    <div class="d-flex mt-3 event-body__contact-location">
                        <span>
                            <img class="event-body__contact-location-icon" width=32 src="~/img/location.png">
                        </span>
                        <div class="ml-2 ">
                            <label asp-for="Location"></label>
                            <input class="form-control" asp-for="Location" type="text" />
                        </div>
                    </div>
                </div>
                <div class="event-body__contact-create mt-2">
                    <span class="event-body__contact-create-user">Опубликовал:</span>
                    <div class="mt-2 d-flex">
                        <span>
                            <img class="event-body__contact-email-icon" width=32 src="~/img/gmail.png" />
                        </span>
                        <div class="ml-2 ">
                            <label asp-for="ContactEmail"></label>
                            <input class="form-control" asp-for="ContactEmail" type="text" />
                        </div>
                    </div>
                    <div class="mt-2 d-flex">
                        <span>
                            <img class="event-body__contact-calendar-icon" width=32 src="~/img/calendar.png" />
                        </span>
                        <div class="ml-2 ">
                            <label asp-for="EventData"></label>
                            <input class="form-control" asp-for="EventData" type="datetime" />
                        </div>
                    </div>
                </div>
                
                <div>
                    <button type="submit" class="btn btn-primary-eco_md mt-lg-0 mt-2">Создать</button>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
<script asp-append-version="true" asp-src-include="/js/events/createEvent.js"></script>
}
